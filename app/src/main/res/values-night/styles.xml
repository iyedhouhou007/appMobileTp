<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Night mode specific text styles -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SubheaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="BodyText.Link">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">1.0</item>
    </style>

    <!-- Night-specific component styles -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>
</resources> 