<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="Base.Theme.MyAppMobileTp" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primaryColorGreen</item>
    <item name="colorPrimaryVariant">@color/accentColorGreen</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/gradeColorGreen</item>
    <item name="colorSecondaryVariant">@color/gradeColorRed</item>
    <item name="colorOnSecondary">@color/white</item>

    <!-- Background colors. -->
    <item name="android:colorBackground">@color/backgroundColor</item>
    <item name="colorSurface">@color/white</item>
    <item name="colorOnBackground">@color/black</item>
    <item name="colorOnSurface">@color/black</item>

    <!-- Outline color for surfaces -->
    <item name="colorOutline">#1F000000</item>

    <!-- Error colors. -->
    <item name="colorError">@color/red</item>
    <item name="colorOnError">@color/white</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>

    <!-- Enable edge-to-edge display -->
    <item name="android:navigationBarColor">@android:color/transparent</item>

    <!-- Material You surface variants -->
    <item name="colorSurfaceVariant">@color/cardColorGreen</item>
    <item name="colorSurfaceContainerHigh">#F5F5F5</item>
    <item name="colorSurfaceContainerLow">#FAFAFA</item>
    <item name="colorSurfaceContainer">#F0F0F0</item>
    <item name="colorSurfaceContainerLowest">#FFFFFF</item>
  </style>

  <style name="Theme.MyAppMobileTp" parent="Base.Theme.MyAppMobileTp" />
</resources>
