<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Base.Theme.MyAppMobileTp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/backgroundColor</item>


        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- App bar style -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Edge-to-edge -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.MyAppMobileTp" parent="Base.Theme.MyAppMobileTp" />

    <!-- Splash Screen Theme -->
    <style name="Theme.SplashScreen" parent="Theme.Material3">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.MyAppMobileTp</item>
    </style>
</resources>
