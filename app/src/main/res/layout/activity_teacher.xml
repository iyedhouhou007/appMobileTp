<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/android:colorBackground"
    tools:context=".ui.TeacherActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Information"
                android:layout_marginBottom="@dimen/spacing_medium"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/tvTeacherUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: "
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/tvTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/tvTeacherModules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modules: "
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/spacing_large"/>

            <TextView
                style="@style/SubheaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher Actions"
                android:layout_marginBottom="@dimen/spacing_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddGrades"
                style="@style/AppButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Student Grades"
                android:layout_marginBottom="@dimen/spacing_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/AppButton.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="@dimen/spacing_medium"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>